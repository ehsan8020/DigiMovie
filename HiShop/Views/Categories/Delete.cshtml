@model HiShop.Models.Category

@{
    ViewData["Title"] = "حذف دسته بندی";
}
<br class="my-3" />
<h2 class="text-right">@ViewData["Title"] </h2>
<hr />

<table class="table table-bordered table-hover table-striped table-info text-center table-sm">
    <thead>
        <tr>
            <td colspan="2">آیا از حذف دسته بندی زیر اطمینان دارید ؟</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="align-middle">@Html.DisplayNameFor(m => m.ImagePath)</td>
            <td><img src="@Model.ImagePath" alt="سایت های شاپ - @Model.Title" title="سایت های شاپ - @Model.Title" /></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Title)</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Description)</td>
            <td>@Model.Description </td>
        </tr>

    </tbody>
</table>
<form asp-action="DeleteDone">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash align-middle"></i>
        حذف نهایی
    </button>
    <a asp-action="Index" class="btn btn-outline-dark">
        <i class="fas fa-share align-middle"></i>
        بازگشت به لیست دسته بندی ها
    </a>
</form>

