@model DigiMovie.Models.Category

@{
    ViewData["Title"] = "نمایش جزییات دسته بندی";
}
<br class="my-3" />
<h2 class="text-right">@ViewData["Title"] </h2>
<hr />

<table class="table table-bordered table-hover table-striped table-info text-center table-sm">
    <tbody>
        <tr>
            <td class="align-middle">@Html.DisplayNameFor(m => m.ImagePath)</td>
            <td><img src="@Model.ImagePath" alt="سایت دیجی مووی - @Model.Title" title="سایت دیجی مووی - @Model.Title" class="w-75" /></td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Title)</td>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(m => m.Description)</td>
            <td>@Model.Description </td>
        </tr>
    </tbody>
</table>
<br class="my-2" />
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
    <i class="fas fa-edit align-middle"></i>
    ویرایش این دسته بندی
</a>
<a asp-action="Index" class="btn btn-outline-dark">
    <i class="fas fa-share align-middle"></i>
    بازگشت به لیست دسته بندی ها
</a>