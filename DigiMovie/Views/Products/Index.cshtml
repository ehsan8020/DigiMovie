@model IEnumerable<Product>
@{
    ViewData["Title"] = "نمایش محصولات";
}

@section Head{
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
}
<br class="my-3" />
<h2 class="text-right">@ViewData["Title"] </h2>
<hr />
<div class="search-bar">
    <input type="text" id="search" placeholder="جستجوی محصولات..." class="form-control" /><div id="suggest"></div>
</div>
<hr />
<div class="text-right">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="fas fa-plus align-middle"></i>
        افزودن محصول جدید
    </a>
</div>

<hr />
@if (!Model.Any())
{
    <div class="alert alert-warning text-center">هیچ محصولی در فروشگاه ثبت نشده است.</div>
}
else
{
    <table class="table table-bordered table-hover table-striped table-info text-center table-sm">
        <thead class="table-dark text-danger" style="font-size:large">
            <tr>
                <td>ردیف</td>
                <td>@Html.DisplayNameFor(m => m.ImagePath)</td>
                <td>@Html.DisplayNameFor(m => m.Title)</td>
                <td>@Html.DisplayNameFor(m => m.IsExists)</td>
                <td>@Html.DisplayNameFor(m => m.NumberInStock)</td>
                <td>@Html.DisplayNameFor(m => m.Price)</td>
                <td>جزییات</td>
                <td>ویرایش</td>
                <td>حذف</td>
            </tr>
        </thead>
        <tbody>
            @{ var i = 1;}
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@i</td>
                    <td class="align-middle">
                        <img src="@item.ImagePath" alt="سایت دیجی مووی - @item.Title" title="سایت دیجی مووی - @item.Title" width="100" />
                    </td>
                    <td class="align-middle">@item.Title</td>

                    <td class="align-middle">
                        @if (item.IsExists)
                        {
                            <text>بلی</text>
                        }
                        else
                        {
                            <text>خیر</text>
                        }
                    </td>
                    <td class="align-middle">@item.NumberInStock</td>
                    <td class="align-middle">@item.Price</td>
                    <td class="align-middle">
                        <a asp-action="Details" asp-route-id="@item.Id" class="nav-link text-info">
                            <i class="fas fa-2x fa-info-circle"></i>
                        </a>
                    </td>
                    <td class="align-middle">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="nav-link text-warning">
                            <i class="fas fa-2x fa-edit"></i>
                        </a>
                    </td>
                    <td class="align-middle">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="nav-link text-danger">
                            <i class="fas fa-2x fa-trash"></i>
                        </a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>

}
<br class="my-3" />
@section Scripts{

    <script>
        $(document).ready(function () {
            $('#search').on({
                'keyup': function () {
                    //check for minimum required length for search goes here
                    $.ajax({
                        method: 'get',
                        url: '/Products/Search',
                        data: { q: $(this).val() },
                        success: function (d) {
                            $('.search-bar #suggest').css('display', 'block').empty();
                            var suggestElement = $('.search-bar #suggest');
                            for (var i in d) {
                                suggestElement
                                    .append('<div class="suggest-item"><a href="/Products/Details/' + d[i].id + '">'
                                        + '<img width="40" height="40" src="' + d[i].imagePath + '"> '
                                        + d[i].title + '</a></div>');
                            }
                        }
                    });
                }
                , 'focusout': function () {
                    $('.search-bar #suggest').slideUp(function () {
                        $(this).empty();
                    });
                }
            });
        });
    </script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": false,
            "progressBar": true,
            "positionClass": "toast-top-left",
            "preventDuplicates": false,
            "onclick": null,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "10000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
    </script>
    @if (TempData["ProductDeleteStatus"] != null)
    {
        @if ((string)TempData["ProductDeleteStatus"] == "OK")
        {
            <script>toastr["success"]("حذف محصول مورد نظر با موفقیت انجام گردید.", "دیجی مووی");</script>}
        else
        {
            <script>
                toastr["error"]("حذف محصول مورد نظر انجام نگردید، لطفاً مجدداً تلاش نمایید. <br> @TempData["ProductDeleteStatus"].ToString()", "دیجی مووی");
            </script>}
    }
    @if (TempData["ProductCreateStatus"] != null)
    {
        @if ((string)TempData["ProductCreateStatus"] == "OK")
        {
            <script>toastr["success"]("افزودن محصول مورد نظر با موفقیت انجام گردید.", "دیجی مووی");</script>}
        else
        {
            <script>toastr["error"]("افزودن محصول مورد نظر انجام نگردید، لطفاً مجدداً تلاش نمایید. <br> @TempData["ProductCreateStatus"].ToString()", "دیجی مووی");</script>}
    }
    @if (TempData["ProductEditStatus"] != null)
    {
        @if ((string)TempData["ProductEditStatus"] == "OK")
        {
            <script>toastr["success"]("ویرایش محصول مورد نظر با موفقیت انجام گردید.", "دیجی مووی");</script>}
        else
        {
            <script>toastr["error"]("ویرایش محصول مورد نظر انجام نگردید، لطفاً مجدداً تلاش نمایید. <br> @TempData["ProductEditStatus"].ToString()", "دیجی مووی");</script>}
    }
}
